<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EmploymentAgency.Views.Styles">
    <Style x:Key="BackButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource BackButtonTemplate}"/>
    </Style>
    
    <Style x:Key="AddImageButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource AddImageButtonTemplate}"/>
    </Style>

    <Style x:Key="RemoveImageButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource RemoveImageButtonTemplate}"/>
    </Style>

    <Style x:Key="ToFindButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource ToFindButtonTemplate}"/>
    </Style>

    <Style x:Key="AddButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource AddButtonTemplate}"/>
    </Style>

    <Style x:Key="ChangeButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource ChangeButtonTemplate}"/>
    </Style>

    <Style x:Key="RemoveButton" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource RemoveButtonTemplate}"/>
    </Style>
</ResourceDictionary>