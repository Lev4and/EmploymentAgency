<Page x:Class="EmploymentAgency.Views.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mdc="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
      xmlns:local="clr-namespace:EmploymentAgency.Views.Pages"
      mc:Ignorable="d"
      Background="{StaticResource PageBackgroundBrush}"
      DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное окно" WindowTitle="Агентство трудоустройства - Главное окно">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Text="Агентство трудоустройства"
                       TextAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" 
              VerticalAlignment="Center"
              HorizontalAlignment="Center" 
              Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" 
                  Margin="5">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="50"
                        mdt:ButtonAssist.CornerRadius="25"
                        ToolTip="Авторизация"
                        Command="{Binding Path=Authorization}">
                    <TextBlock Text="Авторизация"/>
                </Button>
            </Grid>
            <Grid Grid.Row="1"
                  Margin="5">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="50"
                        mdt:ButtonAssist.CornerRadius="25"
                        ToolTip="Регистрация"
                        Command="{Binding Path=Registration}">
                    <TextBlock Text="Регистрация"/>
                </Button>
            </Grid>
            <Grid Grid.Row="2"
                  Margin="5">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="50"
                        mdt:ButtonAssist.CornerRadius="25"
                        ToolTip="Настройки"
                        Command="{Binding Path=Settings}">
                    <TextBlock Text="Настройки"/>
                </Button>
            </Grid>
            <Grid Grid.Row="3"
                  Margin="5">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="50"
                        mdt:ButtonAssist.CornerRadius="25"
                        ToolTip="Выход"
                        Command="{Binding Path=Exit}">
                    <TextBlock Text="Выход"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
