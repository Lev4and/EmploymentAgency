                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="GenderMaleFemale" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Гендеры"
                                            FontSize="15"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Genders}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="11">
