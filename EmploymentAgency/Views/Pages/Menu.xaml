                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=DrivingLicenseCategories}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="5">
                                        <mdt:PackIcon
                                            Width="15"
                                            Height="15"
                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="School" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Виды образования"
                                            FontSize="15"
                                            Foreground="White">
