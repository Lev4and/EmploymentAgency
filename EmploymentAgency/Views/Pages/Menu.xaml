                                    <Grid Grid.Row="15">
                                        <mdt:PackIcon
                                            Width="15"
                                            Height="15"
                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="BadgeAccountAlert" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Статусы рассмотрения заявок"
                                            FontSize="15"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=RequestStatuses}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="16">
                                        <mdt:PackIcon
                                            Width="15"
                                            Height="15"
                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="AccountTie" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Организации"
                                            FontSize="15"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Organizations}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="17">
                                        <mdt:PackIcon
                                            Width="15"
                                            Height="15"
                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="Store" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Филиалы организаций"
                                            FontSize="15"
                                            Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Branches}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="18">
                                        <mdt:PackIcon
                                            Width="15"
                                            Height="15"
                                            Margin="10,16"
                                            Foreground="White"
                                            Kind="BriefcaseAccount" />
                                        <ListBoxItem
                                            Padding="37,14"
                                            Content="Должности"
                                            FontSize="15"
                                            Foreground="White">
