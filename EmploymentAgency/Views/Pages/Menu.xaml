<Page x:Class="EmploymentAgency.Views.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:EmploymentAgency.Views.Pages"
      mc:Ignorable="d"
      Background="{StaticResource PageBackgroundBrush}"
      DataContext="{Binding MenuViewModel, Source={StaticResource ViewModelLocator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню" WindowTitle="Агентство трудоустройства - Меню">
    <Grid>
        <mdt:ColorZone Mode="PrimaryMid"
                       Padding="16"
                       Height="70">
            <Grid>
                <ToggleButton x:Name="IsLeftDrawerOpenToggleButton" 
                              Style="{DynamicResource MaterialDesignHamburgerToggleButton}"
                              IsChecked="{Binding Path=IsLeftDrawerOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              HorizontalAlignment="Left"
                              Panel.ZIndex="1"/>
                <TextBlock Text="{Binding Path=Title}"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="22"
                           FontWeight="Medium"
                           Panel.ZIndex="0"
                           DataContext="{Binding Path=PageSource}">
                </TextBlock>
            </Grid>
        </mdt:ColorZone>
        <mdt:DialogHost Identifier="RootDialog"
                        Panel.ZIndex="1"
                        Width="Auto"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left">
            <mdt:DrawerHost Width="Auto" IsLeftDrawerOpen="{Binding ElementName=IsLeftDrawerOpenToggleButton, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <mdt:DrawerHost.LeftDrawerContent>
                    <DockPanel Width="Auto">
                        <Grid HorizontalAlignment="Stretch" 
                              Background="{StaticResource PrimaryHueMidBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="326*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  Background="GhostWhite">
                                <ToggleButton IsChecked="{Binding Path=IsLeftDrawerOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              Style="{DynamicResource MaterialDesignActionToggleButton}">
                                    <ToggleButton.Content>
                                        <mdt:PackIcon Kind="Menu"/>
                                    </ToggleButton.Content>
                                    <mdt:ToggleButtonAssist.OnContent>
                                        <mdt:PackIcon Kind="ArrowLeft" />
                                    </mdt:ToggleButtonAssist.OnContent>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding Path=OnUnchecked}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ToggleButton>
                            </Grid>
                            <Grid Grid.Row="1" 
                                  Background="GhostWhite">
                                <Image Source="/EmploymentAgency;component/Resources/Images/Icons/Icon.ico"/>
                            </Grid>
                            <ScrollViewer HorizontalAlignment="Stretch"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto" 
                                          Grid.Row="2">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <mdt:PackIcon Kind="City"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Страны"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Countries}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <mdt:PackIcon Kind="CityVariant"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Города"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Cities}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <mdt:PackIcon Kind="SignDirection"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Улицы"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Streets}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <mdt:PackIcon Kind="HammerWrench"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Навыки"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Skills}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="4">
                                        <mdt:PackIcon Kind="Car"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Категории водительских прав"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=DrivingLicenseCategories}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="5">
                                        <mdt:PackIcon Kind="School"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Виды образования"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Educations}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="6">
                                        <mdt:PackIcon Kind="BriefcaseClock"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Типы занятости"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=EmploymentTypes}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="7">
                                        <mdt:PackIcon Kind="HardHat"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Опыт работы"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Experiences}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="8">
                                        <mdt:PackIcon Kind="Translate"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Языки"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Languages}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="9">
                                        <mdt:PackIcon Kind="Translate"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Уровни знания языка"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=LanguageProficiencies}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="10">
                                        <mdt:PackIcon Kind="GenderMaleFemale"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Гендеры"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Genders}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="11">
                                        <mdt:PackIcon Kind="Cog"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Отрасли"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Industries}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="12">
                                        <mdt:PackIcon Kind="CogOutline"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Подотрасли"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=SubIndustries}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="13">
                                        <mdt:PackIcon Kind="Wrench"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Сферы деятельности"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=ProfessionCategories}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="14">
                                        <mdt:PackIcon Kind="AccountHardHat"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Профессии"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Professions}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="15">
                                        <mdt:PackIcon Kind="BadgeAccountAlert"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Статусы рассмотрения заявок"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=RequestStatuses}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="16">
                                        <mdt:PackIcon Kind="AccountTie"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Организации"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Organizations}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="17">
                                        <mdt:PackIcon Kind="Store"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Филиалы организаций"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Branches}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="18">
                                        <mdt:PackIcon Kind="BriefcaseAccount"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Должности"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Roles}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="19">
                                        <mdt:PackIcon Kind="ProgressClock"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="График работы"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Schedules}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="20">
                                        <mdt:PackIcon Kind="AccountGroup"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Пользователи"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Users}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="21">
                                        <mdt:PackIcon Kind="ExitRun"
                                                      Width="15"
                                                      Height="15"
                                                      Margin="10 16"
                                                      Foreground="White"/>
                                        <ListBoxItem Content="Выход"
                                                     Padding="37 14"
                                                     FontSize="15"
                                                     Foreground="White">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding Path=Exit}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </DockPanel>
                </mdt:DrawerHost.LeftDrawerContent>
            </mdt:DrawerHost>
        </mdt:DialogHost>
        <Frame Content="{Binding Path=PageSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
               NavigationUIVisibility="Hidden"
               Panel.ZIndex="0"
               Margin="5,75,5,5">
        </Frame>
    </Grid>
</Page>
