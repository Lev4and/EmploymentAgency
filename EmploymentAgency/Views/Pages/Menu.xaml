                                                    <i:InvokeCommandAction Command="{Binding Path=EmploymentTypes}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ListBoxItem>
                                    </Grid>
                                    <Grid Grid.Row="7">
