<Window x:Class="EmploymentAgency.Views.Windows.ChangeLanguageProficiency"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:EmploymentAgency.Views.Windows"
        mc:Ignorable="d"
        Background="{StaticResource WindowBackgroundBrush}"
        DataContext="{Binding ChangeLanguageProficiencyViewModel, Source={StaticResource ViewModelLocator}}"
        Title="Агентство трудоустройства - Изменение данных уровня знания языка" Height="450" Width="800">
    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding Path=Loaded}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="5"
              Height="50"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <mdt:PackIcon x:Name="IconAlphabeticalVariant"
                              Kind="AlphabeticalVariant"
                              Height="Auto"
                              Width="{Binding ElementName=IconAlphabeticalVariant, Path=Height}"
                              ToolTip="Обозначение"/>
            </Grid>
            <Grid Grid.Column="1" 
                      Margin="5,0,0,0">
                <TextBox x:Name="DesignationTextBox"
                         Text="{Binding Path=Designation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         mdt:HintAssist.Hint="Обозначение уровня знания языка"
                         mdt:HintAssist.HelperText="Введите обозначение уровня знания языка"
                         FontSize="20"
                         FontWeight="Medium"
                         ToolTip="{Binding ElementName=DesignationTextBox, Path=Text}"
                         VerticalContentAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1"
              Margin="5"
              Height="50"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <mdt:PackIcon x:Name="IconTranslate"
                              Kind="Translate"
                              Height="Auto"
                              Width="{Binding ElementName=IconTranslate, Path=Height}"
                              ToolTip="Язык"/>
            </Grid>
            <Grid Grid.Column="1" 
                      Margin="5,0,0,0">
                <TextBox x:Name="LanguageProficiencyNameTextBox"
                         Text="{Binding Path=LanguageProficiencyName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         mdt:HintAssist.Hint="Название уровня знания языка"
                         mdt:HintAssist.HelperText="Введите название уровня знания языка"
                         FontSize="20"
                         FontWeight="Medium"
                         ToolTip="{Binding ElementName=LanguageProficiencyNameTextBox, Path=Text}"
                         VerticalContentAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2"
              Margin="5">
            <Grid VerticalAlignment="Bottom">
                <mdt:Badged Badge="{mdt:PackIcon Kind=ContentSaveCog}"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Height="50"
                            mdt:ButtonAssist.CornerRadius="25"
                            ToolTip="Изменить"
                            Command="{Binding Path=Change}">
                        <TextBlock Text="Изменить"/>
                    </Button>
                </mdt:Badged>
            </Grid>
        </Grid>
    </Grid>
</Window>
