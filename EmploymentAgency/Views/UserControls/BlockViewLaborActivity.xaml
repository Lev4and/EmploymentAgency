<UserControl x:Class="EmploymentAgency.Views.UserControls.BlockViewLaborActivity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:EmploymentAgency.Views.UserControls"
             xmlns:c="clr-namespace:EmploymentAgency.Converters"
             mc:Ignorable="d"
             x:Name="_this"
             d:DesignHeight="200" d:DesignWidth="800" MinHeight="200" MaxHeight="200">
    <UserControl.Resources>
        <c:BoolToCollapsedVisibility x:Key="boolToCollapsedVisibility"/>
        <c:NullableDateTimeToText x:Key="nullableDateTimeToText"/>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="1,1,1,1"
                BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0"
                                      Margin="5,0,5,0">
                                <TextBlock Text="От:"
                                               TextAlignment="Center"
                                               FontWeight="Medium"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="1"
                                      Margin="5,0,5,0">
                                <TextBlock Text="{Binding ElementName=_this, Path=StartDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource nullableDateTimeToText}}"
                                               TextAlignment="Center"
                                               FontWeight="Medium"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0"
                                      Margin="5,0,5,0">
                                <TextBlock Text="До:"
                                               TextAlignment="Center"
                                               FontWeight="Medium"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="1"
                                      Margin="5,0,5,0">
                                <TextBlock Text="{Binding ElementName=_this, Path=EndDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource nullableDateTimeToText}}"
                                               TextAlignment="Center"
                                               FontWeight="Medium"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Border BorderThickness="1,0,1,0"
                            BorderBrush="Black">
                        <Grid Margin="5,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="100"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <mdt:PackIcon x:Name="iconAccountTie"
                                                      Kind="AccountTie"
                                                      Height="Auto"
                                                      Width="{Binding ElementName=iconAccountTie, Path=Height}"
                                                      ToolTip="Название компании"/>
                                    </Grid>
                                    <Grid Grid.Column="1"
                                          Margin="5,0,5,0">
                                        <TextBlock Text="{Binding ElementName=_this, Path=OrganizationName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <mdt:PackIcon x:Name="iconMapMarker"
                                                      Kind="MapMarker"
                                                      Height="Auto"
                                                      Width="{Binding ElementName=iconMapMarker, Path=Height}"
                                                      ToolTip="Адрес компании"/>
                                    </Grid>
                                    <Grid Grid.Column="1"
                                          Margin="5,0,0,0">
                                        <TextBlock Text="{Binding ElementName=_this, Path=OrganizationAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1"
                                  Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <mdt:PackIcon x:Name="iconCardAccountDetailsOutline"
                                                      Kind="CardAccountDetailsOutline"
                                                      Height="Auto"
                                                      Width="{Binding ElementName=iconCardAccountDetailsOutline, Path=Height}"
                                                      ToolTip="Должность"/>
                                    </Grid>
                                    <Grid Grid.Column="1"
                                          Margin="5,0,0,0">
                                        <TextBlock Text="{Binding ElementName=_this, Path=ProfessionName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2"
                                  Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <mdt:PackIcon x:Name="iconMessageReplyText"
                                                  Kind="MessageReplyText"
                                                  Height="30"
                                                  VerticalAlignment="Center"
                                                  Width="{Binding ElementName=iconCardAccountDetailsOutline, Path=Height}"
                                                  ToolTip="Активность"/>
                                </Grid>
                                <Grid Grid.Column="1"
                                      Margin="5,0,5,0">
                                    <Border BorderThickness="1,1,1,1"
                                            BorderBrush="Black">
                                        <TextBlock Text="{Binding ElementName=_this, Path=Activity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="2"
                      Margin="5,0,5,0">
                    <mdt:PackIcon x:Name="iconCloseCircle"
                                      Kind="CloseCircle"
                                      Height="Auto"
                                      Width="{Binding ElementName=iconCloseCircle, Path=Height}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ToolTip="Удалить"
                                      Foreground="Red"
                                      Visibility="{Binding ElementName=_this, Path=IsCanRemove, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource boolToCollapsedVisibility}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding ElementName=_this, Path=Remove}" CommandParameter="{Binding ElementName=_this}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </mdt:PackIcon>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
