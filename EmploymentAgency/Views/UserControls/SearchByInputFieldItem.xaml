<UserControl x:Class="EmploymentAgency.Views.UserControls.SearchByInputFieldItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mdt="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:EmploymentAgency.Views.UserControls"
             mc:Ignorable="d"
             x:Name="_this"
             d:DesignHeight="60" d:DesignWidth="800" MinHeight="60" MaxHeight="60">
    <Grid Background="{Binding ElementName=_this, Path=MonochromeBrush, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
        <TextBlock Text="{Binding ElementName=_this, Path=ResultSearch, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                   FontSize="20"
                   FontWeight="Medium"
                   Margin="5,0,5,0"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
